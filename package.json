{
    "name": "garyblackwood.co.uk",
    "version": "0.2.0",
    "private": true,
    "description": "The personal website of Gary Blackwood.",
    "author": "Gary Blackwood <gary@garyblackwood.co.uk>",
    "license": "MIT",
    "scripts": {
        "develop": "gatsby develop",
        "start": "gatsby develop",
        "build": "gatsby build",
        "serve": "gatsby serve",
        "clean": "gatsby clean",
        "deploy": "scp -r public/* deploy@garyblackwood.co.uk:~/garyblackwood.co.uk",
        "format": "prettier --write *.tsx src/**/*.{js,css}",
        "prepare": "husky install",
        "pre-commit": "npm run typecheck && lint-staged",
        "typecheck": "tsc --noEmit",
        "lint:js": "eslint --fix *.js src/**/*.js",
        "lint:ts": "eslint --fix src/**/*.tsx",
        "lint:css": "stylelint --fix src/**/*.css",
        "lint": "npm run lint:ts && npm run lint:js && npm run lint:css"
    },
    "dependencies": {
        "gatsby": "^3.6.2",
        "gatsby-plugin-catch-links": "^3.7.1",
        "gatsby-plugin-feed": "^3.7.1",
        "gatsby-plugin-image": "^1.7.1",
        "gatsby-plugin-manifest": "^3.7.1",
        "gatsby-plugin-nprogress": "^3.7.1",
        "gatsby-plugin-offline": "^4.7.1",
        "gatsby-plugin-postcss": "^4.7.1",
        "gatsby-plugin-react-helmet": "^4.7.1",
        "gatsby-plugin-react-svg": "^3.0.1",
        "gatsby-plugin-sharp": "^3.7.1",
        "gatsby-plugin-sitemap": "^4.3.1",
        "gatsby-plugin-typescript": "^3.7.1",
        "gatsby-plugin-typography": "^3.7.1",
        "gatsby-remark-autolink-headers": "^4.4.1",
        "gatsby-remark-copy-linked-files": "^4.4.1",
        "gatsby-remark-images": "^5.4.1",
        "gatsby-remark-prismjs": "^5.4.1",
        "gatsby-source-filesystem": "^3.7.1",
        "gatsby-transformer-remark": "^4.4.1",
        "gatsby-transformer-sharp": "^3.7.1",
        "postcss": "^8.2.6",
        "postcss-import": "^14.0.2",
        "postcss-preset-env": "^6.7.0",
        "precss": "^4.0.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-helmet": "^6.1.0",
        "react-photo-gallery": "^8.0.0",
        "react-typography": "^0.16.20",
        "typescript": "^4.3.2",
        "typography": "^0.16.21",
        "typography-theme-irving": "^0.16.19"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.14.5",
        "@types/node": "^15.12.2",
        "@types/react": "^17.0.11",
        "@types/react-dom": "^17.0.7",
        "@types/react-helmet": "^6.1.1",
        "@types/typography": "^0.16.3",
        "eslint": "^7.28.0",
        "eslint-config-react-app": "^6.0.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.1",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^22.0.0"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.tsx": [
            "pretter --write",
            "eslint --fix"
        ],
        "*.css": [
            "prettier --write",
            "stylelint --fix"
        ]
    }
}
